<%= form_with(model: @work, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :title, "作品名" %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :circuit, "回路図ファイル" %>
  <%= f.file_field :circuit, accept: "image/jpeg,image/gif,image/png" %>

<%
=begin
%>
  <%= f.label :circuit, "回路図(後日追加)" %>
  <%= f.text_field :circuit, class: 'form-control' %>

  <%= f.label :picture, "作品写真(後日追加)" %>
  <%= f.text_field :picture, class: 'form-control' %>
<%
=end
%>
  <%= f.label :description, "作品説明" %>
  <%= f.text_area :description, class: 'form-control', size: "100x5" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  $("#work_circuit").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("回路図ファイルの最大サイズは5MBまでです。");
      $("#work_circuit").val("");
    }
  });
</script>
